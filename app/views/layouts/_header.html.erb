<header class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "InstagramApp", root_path, class: 'navbar-brand' %>
  <ul class="navbar-nav ml-auto navbar-right">
    <li class="nav-item"><h4><%= link_to 'posts', posts_url, class: "nav-link" %></h4></li>
    <% if logged_in? %>
      <li class="nav-item"><h4><%= link_to 'logout', logout_url, method: :delete, class: "nav-link" %></h4></li>
    <% else %>
    <li><%= link_to "Log in", login_path, class: "nav-link" %></li>
    <% end %>
  </ul>
</header>