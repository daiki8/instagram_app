<div class="bg-light text-center border" style="margin-bottom:2vw; width:30%;">
    <h5 style="font-size: 1vw;"><%= post.title %></h5>
    <% if post.picture? %>
        <%= image_tag post.picture.url, style:"max-width:100%; height:auto" %>
    <% else %>
    <%= image_tag "https://placehold.jp/217x217.png", style:"max-width:100%; height:auto", class:"post_image" %>
    <% end %>
</div>
